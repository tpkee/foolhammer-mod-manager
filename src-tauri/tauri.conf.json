{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "modhammer-manager",
  "version": "0.1.0",
  "identifier": "com.tpkee.modhammer_manager",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "nuxt dev",
    "beforeBuildCommand": "nuxt generate"
  },
  "app": {
    "windows": [
      {
        "title": "modhammer-manager",
        "width": 1080,
        "height": 864,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
